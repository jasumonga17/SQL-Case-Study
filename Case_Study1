GO 
use demo;

CREATE SCHEMA dannys_diner;
SET search_path = dannys_diner;

GO
drop table if exists sales;

GO
CREATE TABLE sales 
(
  "customer_id" VARCHAR(1),
  "order_date" DATE,
  "product_id" INTEGER
);

GO
